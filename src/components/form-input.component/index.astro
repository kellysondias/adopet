---
interface Props {
    name: string;
    type: string;
    placeholder: string;
}
const {name, type, placeholder} = Astro.props
---

<div class="flex-center flex-col">
    <h3 class="text-[#737380]">{name}</h3>
    <input
      type={type as astroHTML.JSX.HTMLInputTypeAttribute}
      name={type}
      id={type}
      placeholder={placeholder}
      class="text-center w-5/6"
    />
</div>
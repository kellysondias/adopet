---
import Head from "../head/index.astro";
import Header from "../../components/header.component/index.astro";
import Footer from "../../components/footer.component/index.astro";
import TopLeftVector from "../../components/vectors/top-left-vector.astro";

interface Props {
  title?: string;
  description?: string;
  hasHeader: boolean;
  background: `bg-${string}`;
}

const { title, background, hasHeader = true } = Astro.props;
---

<!doctype html>
<html lang="en-US">
  <Head {title} />
  <body class=`${background} font-poppins`>
    <TopLeftVector />
    {hasHeader && <Header />}
    <slot />
    <Footer />
  </body>
</html>

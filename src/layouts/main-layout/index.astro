---
import Head from "../head/index.astro";
import Header from "../../components/header.component/index.astro";
import Footer from "../../components/footer.component/index.astro";
import TopLeftVector from "../../components/vectors/top-left-vector.astro";

interface Props {
  title?: string;
  description?: string;
  hasHeader?: boolean;
  background?: `bg-${string}` | Color;
}

const { title, background = "#3772FF", hasHeader = true } = Astro.props;
---

<!doctype html>
<html lang="en-US" class="h-full">
  <Head {title} />
  <body class=`${background} flex flex-col font-poppins min-h-full`>
    <TopLeftVector />
    {hasHeader && <Header />}
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
